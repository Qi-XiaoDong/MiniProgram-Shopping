.pyg_detail{
    padding-bottom: 90rpx;
}
.pyg_detail swiper{
    height: 300px;
    text-align: center;
    /* background-color: red; */
}
.pyg_detail swiper image{
    width: 70%;
}
.pyg_detail .goods_pirce{
    font-size: 50rpx;
    font-weight: bolder;
    color:var(--themeColor);
}
.pyg_detail .goods_info{
    padding: 10rpx 0;
    display: flex;
}
.pyg_detail .goods_info .goods_name{
    flex: 5;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    
}
.pyg_detail .goods_info .goods_collect{
    border-left: 1rpx solid #ccc;
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}
.pyg_detail .goods_introduce text{
    font-size: 60rpx;
    color: var(--themeColor);
    font-weight: bolder;
}
.pyg_detail .footer_tools{
    display: flex;
    position: fixed;
    left: 0;
    bottom: 0;
    background-color: #fff;
    border-top: 1rpx solid #ccc;
    width: 100%;
    height: 90rpx;
}
.pyg_detail .footer_tools .tools_item{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
}
.pyg_detail .footer_tools .cartAdd{
    flex:2;
    color: #fff;
    font-weight: bold;
    background-color: darkorange;
}
.pyg_detail .footer_tools .buy{
    flex:2;
    color: #fff;
    font-weight: bold;
    background-color: #f40;
}
.pyg_detail .footer_tools button,
.pyg_detail .footer_tools navigator{
    position: absolute;
    left: 0;
    top: 0;
    width:100%;
    height: 100%;
    opacity: 0;
}
